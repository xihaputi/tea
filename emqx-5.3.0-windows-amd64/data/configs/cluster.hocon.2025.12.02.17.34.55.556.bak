authentication = [
  {
    backend = http
    body {password = "${password}", username = "${username}"}
    connect_timeout = 15s
    enable_pipelining = 100
    headers {content-type = "application/json"}
    mechanism = password_based
    method = post
    pool_size = 8
    request_timeout = 5s
    ssl {enable = false, verify = verify_peer}
    url = "http://127.0.0.1:8000/api/auth/mqtt"
  }
]
