.page-container {
  min-height: 100vh;
  background-color: #F3F4F6;
  padding: 24rpx;
  padding-bottom: 120rpx;
}
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 32rpx;
  margin-bottom: 24rpx;
}
.title-lg {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}
.title-md {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}
.text-sub {
  font-size: 26rpx;
  color: #6B7280;
}
.tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
}
.tag.tag-primary {
  background: #D1FAE5;
  color: #059669;
}
.tag.tag-warn {
  background: #FEF3C7;
  color: #D97706;
}
.tag.tag-danger {
  background: #FEE2E2;
  color: #DC2626;
}
.btn-primary {
  background: linear-gradient(135deg, #10B981, #059669);
  color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  font-weight: 600;
  font-size: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}
.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}
